<h2>Customer Information</h2>
<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @customers.each do |customer| %>
    <tr>
      <td><%= link_to image_tag('/images/icons/show.png'), customer, :class => 'button' %></td>
      <td><%= link_to image_tag('/images/icons/edit.png'), edit_customer_path(customer), :class => 'button'%></td>
      <td><%= link_to image_tag('/images/icons/delete.png'), customer, :method => :delete, :title => "Delete #{customer.first_name} #{customer.last_name}",:class => 'button' %></td>
      <td><%= customer.first_name %> <%= customer.last_name %></td>
    </tr>
  <% end %>
</table>
<br />
<%= link_to 'New Customer', new_customer_path %>
